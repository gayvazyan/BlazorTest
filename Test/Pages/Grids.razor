@page "/Grids"

    <h1>Grids</h1>



<GridAutoComponent Items="employees"
                   CssClass="is-striped is-hoverable"
                   ColumnsToExclude="Id">

</GridAutoComponent>

@code
{
    private List<Employee> employees;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        employees = new List<Employee>();

        employees.AddRange(new Employee[3]
        {
            new Employee{ Id=1, Name="Պողոս", SureName="Պողոսյան", Age=20},
            new Employee{ Id=2, Name="Պետրոս", SureName="Պետրոսյան", Age=23},
            new Employee{ Id=3, Name="Մարտիրոս", SureName="Մարտիրոսյան", Age=25}
                });
    }

    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string SureName { get; set; }
        public int Age { get; set; }
    }
}

